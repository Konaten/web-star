---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Association de danse et fitness Ã  Villeurbanne" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/jpeg" href="/LOGO_STAR.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-900 text-white overflow-x-hidden flex flex-col min-h-screen">
        
        <Header />
        
        <div class="flex-grow">
            <slot />
        </div>
        
        <Footer />
        
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const anchorLinks = document.querySelectorAll('a[href^="#"]');
                
                anchorLinks.forEach(link => {
                    link.addEventListener('click', function(this: HTMLAnchorElement, e) {
                        const targetId = this.getAttribute('href');
                        
                        if (!targetId || targetId === '#') {
                            e.preventDefault();
                            window.scrollTo({ top: 0, behavior: 'smooth' });
                            return;
                        }
                        
                        const targetElement = document.querySelector(targetId);
                        
                        if (targetElement) {
                            e.preventDefault();
                            
                            const elementPosition = targetElement.getBoundingClientRect().top + window.scrollY;
                            const offset = 20;
                            const offsetPosition = elementPosition - offset;
							
                            window.scrollTo({
                                top: offsetPosition,
                                behavior: 'smooth'
                            });
                        }
                    });
                });
            });
        </script>
        
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;
        scroll-padding-top: 80px; 
	}
</style>