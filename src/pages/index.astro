---
import Layout from '../layouts/Layout.astro';
import DanceScene from '../components/DanceScene';
import Courses from '../components/Courses.astro';
import Schedule from '../components/Schedule.astro';
import Contact from '../components/Contact.astro';
---

<Layout title="STAR">
    
    <section class="relative h-screen w-full flex items-center justify-center overflow-hidden">
        
        <DanceScene client:load />

        <div class="relative z-10 text-center px-4 bg-slate-900/30 backdrop-blur-sm p-10 rounded-xl border border-white/10">
            <h1 class="text-6xl md:text-8xl font-black mb-4 tracking-tighter bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-blue-500 drop-shadow-lg">
                S.T.A.R
            </h1>
            
            <p class="text-xl md:text-2xl font-light text-slate-200 mb-4 max-w-2xl mx-auto">
                L'énergie de la <span class="font-bold text-pink-400">Zumba</span>. 
                La grâce du <span class="font-bold text-blue-400">Flui'Danse</span>.
            </p>

            <p class="text-sm md:text-base font-medium text-slate-300 mb-8 tracking-widest uppercase">
                Zumba Fitness • Zumba Kid • Flui'Danse • Pilates
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="#cours" class="px-8 py-3 bg-pink-600 hover:bg-pink-500 text-white font-bold rounded-full transition-all transform hover:scale-105 shadow-lg shadow-pink-500/50">
                    Voir les cours
                </a>
                <a href="#contact" class="px-8 py-3 bg-transparent border border-white/30 hover:bg-white/10 text-white font-semibold rounded-full transition-all">
                    Nous contacter
                </a>
            </div>
        </div>
    </section>

    <main class="container mx-auto px-6 py-20">
        <Courses />
    </main>

    <Schedule />

    <Contact />

</Layout>